<view wx:for='{{items}}' wx:key='key' wx:for-item='item'>
    <view data-itemid='{{item.id}}' class='fui-active-box fui-lightborder' bindlongpress='onActionItemLongPress'>
        {{item.id}}
        <slot name='main-{{item.id}}'></slot>
    </view>
</view>

<modal hidden='{{!actionModalShow}}' bindCancel='onActionModalCancel' bindConfirm='conActionModalConfirm'>
    <view class='weui-btn-area'>
        <slot name='actionModal'></slot>
    </view>
</modal>
