@import '../../lib/fui.wxss';
@import '../../lib//weui.wxss';

.fui-image-cropper__container {
  /* min-height: 750rpx; */
  width: 100%;
  position: relative;
}

.wx-corpper {
  position: relative;
  overflow: hidden;
  user-select: none;
  box-sizing: border-box;
}

.fui-image-cropper__content {
  position: relative;
}

.fui-image-cropper__content image {
  display: block;
  width: 100%;
  min-width: 0 !important;
  max-width: none !important;
  height: 100%;
  min-height: 0 !important;
  max-height: none !important;
  image-orientation: 0deg !important;
  margin: 0 auto;
}

/* 内部的信息 */
.wx-corpper-crop-box {
  position: absolute;
  background: rgba(255, 255, 255, 0.3);
  z-index: 2;
}

.wx-corpper-crop-box .wx-cropper-view-box {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;
  overflow: visible;
  outline: 1px solid #69f;
  outline-color: rgba(102, 153, 255, 0.75);
}

.fui-image-cropper__dashed-h {
  position: absolute;
  top: 33.33333333%;
  left: 0;
  width: 100%;
  height: 33.33333333%;
  border-top: 1px dashed rgba(255, 255, 255, 0.5);
  border-bottom: 1px dashed rgba(255, 255, 255, 0.5);
}

.fui-image-cropper__dashed-v {
  position: absolute;
  left: 33.33333333%;
  top: 0;
  width: 33.33333333%;
  height: 100%;
  border-left: 1px dashed rgba(255, 255, 255, 0.5);
  border-right: 1px dashed rgba(255, 255, 255, 0.5);
}

.fui-image-cropper__crop_btn {
  position: absolute;
  z-index: 10;
  left: 3px;
  bottom: 3px;
  opacity: 0.8;
}

.fui-image-cropper__p {
  width: 20px;
  height: 20px;
  border-radius: 10px;
  background-color: #69f;
  position: absolute;
  opacity: 0.75;
  z-index: 3;
}

.fui-image-cropper__p-tl {
  top: -10px;
  left: -10px;
}

.fui-image-cropper__p-tr {
  top: -10px;
  right: -10px;
}

.fui-image-cropper__p-bl {
  bottom: -10px;
  left: -10px;
}

.fui-image-cropper__p-br {
  bottom: -10px;
  right: -10px;
}
