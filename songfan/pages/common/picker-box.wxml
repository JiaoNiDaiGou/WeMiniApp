<!--pages/common/picker-box.wxml-->
<view class='fui-separator-above' />
<view class="weui-flex fui-container {{hasBottomBorder?'fui-lightborder':''}}">
  <view wx:if='{{iconClass}}'>
    <icon class='iconfont {{iconClass}} weui-flex__item fui-picker-box__icon' />
  </view>
  <picker bindchange="pickChanged" value="{{curIndex}}" range="{{range}}" class='weui-flex__item fui-picker-box__picker'>
    <view class="weui-select weui-select_in-select-after" style='color: {{curIndex==-1?"grey":"black"}};'>{{valuePrefix}}{{curIndex==-1?placeholder:range[curIndex]}}{{valueSuffix}}</view>
  </picker>
</view>
<view wx:if='{{!!suggestions && suggestions.length > 0}}' class='fui-badge-box'>
  <view wx:for='{{suggestions}}' wx:key='unique' wx:for-item='suggestion'>
    <view class="weui-badge fui-badge-box__item" bindtap='tapSuggestion' data-index='{{suggestion}}'>{{range[suggestion]}}</view>
  </view>
</view>

<view class='fui-separator-above' />