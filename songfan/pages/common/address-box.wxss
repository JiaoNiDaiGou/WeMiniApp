/* pages/common/address-box.wxss */
@import '../../lib/icon.wxss';
@import '../../lib/weui.wxss';

.fui-address-box__container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.fui-address-box__icon {
  margin-left: 5px;
  margin-right: 5px;
  align-self: flex-start;
}

.fui-address-box__input {
  margin-left: 5px;
  margin-top: 4px;
  font-size: 16px;
  word-break: break-all;
}

.fui-address-box__textarea {
  margin-left: 5px;
  margin-top: 4px;
  font-size: 16px;
  word-break: break-all;
  overflow-y: hidden;
  word-wrap: break-word;
  height: 90px;
}
